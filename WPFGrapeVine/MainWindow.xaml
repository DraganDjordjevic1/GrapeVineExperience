<Window x:Class="WPFGrapeVine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGrapeVine"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="321*" />
            <RowDefinition Height="98*" />
        </Grid.RowDefinitions>
        <StackPanel Margin="10,0,354,10" Grid.Row="1">
            <Button Content="Bookings" HorizontalAlignment="Left" Margin="40,42,0,0" VerticalAlignment="Top" Width="105" Height="35"/>
        </StackPanel>
        <StackPanel>
            <ListBox Height="318" x:Name="toureventlistbox" ItemsSource="{Binding Tourevent}" Margin="57,0,44,0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding TourName}"><Run Text="{Binding eventFee}"/><Run Text=" "/><Run Text="{Binding eventDate}"/></TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

    </Grid>
</Window>
